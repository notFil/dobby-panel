{
    "manifest_version": 2,    
    "name": "Dobby Panel",
    "version": "1.0",

    "description": "This extension works like you think it does",
    "devtools_page": "devtools/devtools-page.html",
    "permissions": [
        "activeTab",
        "cookies", 
        "tabs",
        "<all_urls>"
    ],
    "background":{
        "scripts":["devtools/background_script.js"]
    },
    "content_scripts":[
        {
            "matches":["<all_urls>"],
            "js":["devtools/content_script.js"]
        }
    ],
    "icons": {
        "16": "assets/icons/16.png",
        "32": "assets/icons/32.png",
        "48": "assets/icons/48.png",
        "96": "assers/icons/96.png"
    },
    "applications": {
        "gecko": {
          "id" : "addon@example.com"
        }
      }
}